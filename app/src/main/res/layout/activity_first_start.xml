<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="?attr/detailsElementLayoutWidth"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="?attr/detailsElementBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/txt_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/first_start_hi"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/txt_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_hi"
            android:layout_marginTop="24dp"
            android:text="@string/first_start_intro"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ImageView
            android:id="@+id/img_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_intro"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/first_start_step1_img_desc"
            android:src="@drawable/ic_c_first_start_step1_32dp" />
        <TextView
            android:id="@+id/txt_step1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_step1"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/img_step1"
            android:layout_toEndOf="@+id/img_step1"
            android:text="@string/first_start_step1_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ImageView
            android:id="@+id/img_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_step1_text"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/first_start_step2_img_desc"
            android:src="@drawable/ic_c_first_start_step2_32dp" />
        <TextView
            android:id="@+id/txt_step2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_step2"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/img_step2"
            android:layout_toEndOf="@+id/img_step2"
            android:text="@string/first_start_step2_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ImageView
            android:id="@+id/img_step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_step2_text"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/first_start_step3_img_desc"
            android:src="@drawable/ic_c_first_start_step3_32dp" />
        <TextView
            android:id="@+id/txt_step3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_step3"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/img_step3"
            android:layout_toEndOf="@+id/img_step3"
            android:text="@string/first_start_step3_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <Button
            android:id="@+id/btn_create_car"
            android:background="@drawable/btn_material_accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_step3_text"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="onCreateCarClick"
            android:text="@string/first_start_create_car" />
        <Button
            android:id="@+id/btn_setup_sync"
            android:background="@drawable/btn_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_create_car"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="onSetupSyncClick"
            android:text="@string/first_start_setup_sync" />
    </RelativeLayout>
</ScrollView>